FROM node:20-alpine

WORKDIR /app

# 注转拽 拽爪 转转
COPY package.json yarn.lock ./
RUN yarn install --frozen-lockfile --network-timeout 100000

# 注转拽 转  驻专拽
COPY . .

#  专 转 砖转 住 驻 
ENV REACT_APP_API_BASE=http://localhost:5000

#   转 驻拽爪 注 砖转
RUN yarn build

#  砖 NGINX
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]